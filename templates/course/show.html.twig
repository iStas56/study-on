{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}

    <h1>{{ course.title }}</h1>
    <p>{{ course.description }}</p>

    <h2>Уроки</h2>

    <ol>
        {% for lesson in lessons %}
            <li><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.title }}</a><br></li>
        {% else %}
            <tr>
                <td colspan="5">Уроки отсутсвуют</td>
            </tr>
        {% endfor %}
    </ol>
    <br>

    <a href="{{ path('app_course_index') }}">К списку курсов</a><br>
    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a><br>
    <a href="{{ path('app_lesson_new') }}">Добавить урок</a><br><br>

    {{ include('course/_delete_form.html.twig') }}

{% endblock %}
